<?xml version="1.0" encoding="UTF-8"?>

<Shell
    x:Class="MoneyManager.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MoneyManager"
    xmlns:view="clr-namespace:MoneyManager.View"
    Shell.FlyoutBehavior="Disabled"
    Title="MoneyManager">
    <TabBar>
        <ShellContent 
            Icon="icon_report.svg"
            Title="Báo cáo" ContentTemplate="{DataTemplate view:ManageEntriesPage}" />
        <ShellContent Icon="icon_edit.svg" Title="Nhập" ContentTemplate="{DataTemplate view:AddEntryPage}" />
        <ShellContent Icon="icon_category.svg" Title="Danh mục" ContentTemplate="{DataTemplate view:CategoryPage}" />
    </TabBar>
    <ShellContent
        Title="Thêm danh mục" 
        Route="AddCategoryPage"
        ContentTemplate="{DataTemplate view:AddCategoryPage}" />
</Shell>